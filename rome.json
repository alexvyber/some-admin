{
  "$schema": "https://docs.rome.tools/schemas/12.1.0/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 100,
    "ignore": ["node_modules", "dist"]
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "quoteStyle": "double",
      "quoteProperties": "preserve",
      "semicolons": "asNeeded"
    }
  }
}
